{
  "expo": {
    "name": "RealGo",
    "slug": "realgo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "realgo",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "pe.com.realgo.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "RealGo necesita tu ubicación para mostrar rutas de transporte cercanas.",
        "NSCameraUsageDescription": "RealGo necesita acceso a la cámara para verificar documentos de conductores.",
        "NSPhotoLibraryUsageDescription": "RealGo necesita acceso a fotos para subir documentos.",
        "NSUserNotificationUsageDescription": "RealGo envía notificaciones sobre tu viaje."
      }
    },
    "android": {
      "package": "pe.com.realgo.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "VIBRATE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "PON_TU_KEY_AQUI_MAS_ADELANTE"
        }
      }
    },
    "plugins": [
      "expo-router",
      "expo-camera",
      "expo-image-picker",
      "expo-location",
      "expo-notifications",
      "expo-system-ui"
    ]
  }
}